#!/usr/bin/env julia
using JSON3
using Mustache

sample_list = ARGS[1]
igvsrc = ARGS[2]
template_file = ARGS[3]
output_file = ARGS[4]

d = Dict(
    "igvopts" => JSON3.write(
        Dict(
            "reference" => Dict(
                "id" => "reference",
                "fastaURL" => "reference.fasta",
                "indexURL" => "reference.fasta.fai",
            ),
            "tracks" => [
                Dict(
                    "type" => "annotation",
                    "format" => "gff3",
                    "url" => "reference.gff",
                    "colorBy" => "gbkey",
                    "name" => "Features",
                    "displayMode" => "EXPANDED",
                    "colorTable" => Dict(
                        "3'UTR" => "rgb(245,245,245)",
                        "5'UTR" => "rgb(245,245,245)",
                        "CDS" => "rgb(255,255,0)",
                        "exon" => "rgb(100,100,100)",
                        "gene" => "rgb(0,178,0)",
                        "mat_peptide" => "rgb(0,90,40)",
                        "misc_feature" => "rgb(170,170,170)",
                        "mRNA" => "rgb(190,50,50)",
                        "ORF" => "rgb(255,153,0)",
                        "region" => "rgb(0,0,255)",
                        "*" => "rgb(255,180,0)",
                    )
                ),
                [
                    Dict(
                        "type" => "alignment",
                        "format" => "bam",
                        "url" => "$samplename.bam",
                        "indexURL" => "$samplename.bam.bai",
                        "name" => samplename,
                    ) for samplename in readlines(sample_list)
                ]...,
            ],
        ),
    ),
    "igvjs" => String(read(igvsrc)),
)

open(output_file, "w") do f
    write(f, render_from_file(template_file, d))
end
