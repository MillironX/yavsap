#!/usr/bin/env python
import re
import sys

haplotype_file = sys.argv[1]

with open(haplotype_file, 'r') as haplotype_io:
    haplotype_text = haplotype_io.read()
    frequency_text = re.findall(r"    frequency:.*", haplotype_text)[0]
    frequency = float(frequency_text.split(':')[1])
    depth = int(round(10000*frequency))
    print(depth)
