    "version": "0.2.0",
    "configurations": [
        {
            "type": "julia",
            "request": "launch",
            "name": "Launch variantfilter",
            "program": "${workspaceFolder}/bin/variantfilter",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "juliaEnv": "${command:activeJuliaEnvironment}",
            "args": ["f479.ivar.tsv", "f479.counts.tsv", "f479.ivar.filtered.tsv"]
        },

        {
            "type": "julia",
            "request": "launch",
            "name": "Launch haplotype-finder",
            "program": "${file}",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "juliaEnv": "${command:activeJuliaEnvironment}",
            "args": [
                "data/sample.bam",
                "data/sample.tsv",
                "data/sample.haplotypes.csv",
                "data/sample.haplotypes.yaml",
                "-p 1.0",
                "-m 1"
            ]
        }
    ]
}
